<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.activity.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/activity_sign_in_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/activity_sign_in_imageView_background"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_sign_in_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_sign_in_imageView_background"
            app:layout_constraintEnd_toEndOf="@id/activity_sign_in_imageView_background"
            app:layout_constraintStart_toStartOf="@+id/activity_sign_in_imageView_background"
            app:layout_constraintTop_toTopOf="@+id/activity_sign_in_imageView_background"
            app:srcCompat="@drawable/generic_user" />

        <ProgressBar
            android:id="@+id/activity_sign_in_progressBar"
            android:progress="0"
            android:max="100"
            android:indeterminate="false"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_sign_in_profile_image"
            app:layout_constraintEnd_toEndOf="@id/activity_sign_in_profile_image"
            app:layout_constraintStart_toStartOf="@id/activity_sign_in_profile_image"
            app:layout_constraintTop_toTopOf="@id/activity_sign_in_profile_image" />

        <Button
            android:id="@+id/activity_sign_in_button_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:onClick="onClickCamera"
            android:text="CÃ¢mera"
            app:layout_constraintEnd_toStartOf="@id/activity_sign_in_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sign_in_imageView_background" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp"
            android:onClick="onClickGallery"
            android:text="Galeria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_sign_in_guideline"
            app:layout_constraintTop_toTopOf="@id/activity_sign_in_button_camera" />

        <EditText
            android:id="@+id/activity_sign_in_editText_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/hint_name"
            android:inputType="textCapSentences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sign_in_button_camera" />

        <EditText
            android:id="@+id/activity_sign_in_editText_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_in_editText_name" />

        <EditText
            android:id="@+id/signIn_editText_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/hint_password"
            android:inputType="textVisiblePassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sign_in_editText_email" />

        <Button
            android:id="@+id/signIn_button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:onClick="onClickRegister"
            android:text="Cadastrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signIn_editText_pass" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>